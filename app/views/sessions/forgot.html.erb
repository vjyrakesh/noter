<div class="login-form-div">
  <h2 class="form-title">Update password</h1>
  <% if flash[:alert] %>
    <p class="flash"><%= flash[:alert]%></p>
  <% end %>
  <%= form_tag('/forgot', method: :patch) do %>
    <%= text_field_tag :username, params[:username], placeholder:'Username' %>
    <%= password_field_tag :password, params[:password], placeholder:'New password' %>
    <%= submit_tag "Update",class:"submit-btn" %>
    
  <% end %>
</div>