<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td>
          <%= note.content %>
          <p><%= note.categories.join(",") %></p>
          <p>Last updated on <%= note.updated_at.in_time_zone("Chennai").strftime("%Y-%m-%d at %l:%M %p")%></p>
        </td>
        <td class="actions">
          <ul>
            <li><%= link_to 'Show', note %></li>
            <li><%= link_to 'Edit', edit_note_path(note) %></li>
            <li><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
